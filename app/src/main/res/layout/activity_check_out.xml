<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/appcolor"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/ShapeAppearance.Neumorph.CardView"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fastfood"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Delivery"
                android:textStyle="bold"
                android:id="@+id/delivery"
                android:fontFamily="sans-serif"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="110dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min"
                android:textStyle="bold"
                android:layout_below="@id/delivery"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="110dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/ShapeAppearance.Neumorph.CardView"
                android:layout_height="140dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/fastfood"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/name"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp"
                        android:textColor="@color/textcolor"
                        android:layout_marginLeft="110dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:id="@+id/price"
                            android:fontFamily="sans-serif"
                            android:textSize="18sp"
                            android:layout_gravity="end"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/textcolor" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="quantity"
                            android:layout_marginLeft="110dp"
                            android:textStyle="bold"
                            android:id="@+id/quantity"
                            android:fontFamily="sans-serif"
                            android:textSize="18sp"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/textcolor" />
                    </LinearLayout>
                </RelativeLayout>
            </soup.neumorphism.NeumorphCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:textColor="@color/textcolor"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RS"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:id="@+id/totalprice"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:textColor="@color/textcolor"
                    android:layout_marginRight="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
         <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shapeType="pressed">
             <com.google.android.material.textfield.TextInputEditText
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:hint="Enter your address"
                 android:id="@+id/address"
                 android:paddingLeft="25dp"
                 android:background="@drawable/nobackground"
                 android:inputType="text"/>
         </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your phone number"
                android:id="@+id/phonenumber"
                android:paddingLeft="25dp"
                android:background="@drawable/nobackground"
                android:inputType="text"/>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            style="@style/ShapeAppearance.Neumorph.Button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Confirm Payment and address"
            android:gravity="center"
            android:id="@+id/checkoutbtn"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
          android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:layout_gravity="center">
        </soup.neumorphism.NeumorphButton>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>